#----------------------------------------------
# ip2 is the common representation between predicting outcomes and treatments
#----------------------------------------------

layers {
  name: "slice_features"
  type: SLICE
  bottom: "ip2"
  top: "treated_features"
  top: "untreated_features"
  slice_param {
    slice_dim: 0
  }
}

layers {
  name: "slice_labels"
  type: SLICE
  bottom: "label"
  top: "treated_outcomes"
  top: "untreated_outcomes"
  slice_param {
    slice_dim: 0
  }
}

#----------------------------------------------
# treated outcome predictor
#----------------------------------------------

layers {
  name: "treated_prediction"
  type: INNER_PRODUCT
  bottom: "treated_features"
  top: "treated_prediction"
  blobs_lr: 1
  blobs_lr: 2
  inner_product_param {
    num_output: 1
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
    }
  }
}

layers {
  name: "treated_loss"
  type: EUCLIDEAN_LOSS_WITH_DETAIL 
  bottom: "treated_prediction"
  bottom: "treated_outcomes"
  top: "treated_loss"
  top: "treated_lossdetail"
  loss_weight: 1
  loss_weight: 0
}

