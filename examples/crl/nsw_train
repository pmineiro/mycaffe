name: "Nsw"

layers {
  name: "input"         # treated and untreated data, half and half
  type: MEMORY_DATA
  top: "data"
  top: "label"
  memory_data_param {
    batch_size: 850     # NB: propagate any change to DUMMY_DATA
    channels: 1
    height: 1
    width: 7
  }
}

layers {
  name: "ip0"
  type: INNER_PRODUCT
  bottom: "data"
  top: "ip0"
  blobs_lr: 1
  blobs_lr: 2
  inner_product_param {
    num_output: 80
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
    }
  }
}

