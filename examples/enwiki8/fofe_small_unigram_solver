power: 0.75
# Display every 100 iterations
display: 100
# The maximum number of iterations
max_iter: 100
# snapshot intermediate results
#snapshot: 5000
#snapshot_prefix: "fofe_small_unigram_snapshot"
snapshot_after_train: false
# solver mode: CPU or GPU
solver_mode: GPU
